<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.FragmentFood1"
    android:background="#f5f5f5">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/btn_celery"
            android:layout_width="360dp"
            android:layout_height="130dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/food2_1_celery" />
    <Button
        android:id="@+id/btn_dried_small_shrimps"
        android:layout_width="360dp"
        android:layout_height="130dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_celery"
        android:background="@drawable/food2_2_dried_small_shrimps" />

    <Button
        android:id="@+id/btn_medlar"
        android:layout_width="360dp"
        android:layout_height="130dp"
        android:background="@drawable/foodmedlar"
        android:layout_marginTop="30dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_dried_small_shrimps"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/btn_crucian"
        android:layout_width="360dp"
        android:layout_height="130dp"
        android:background="@drawable/food2_4_crucian"
        android:layout_marginTop="30dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_medlar"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/btn_fishhead"
        android:layout_width="360dp"
        android:layout_height="130dp"
        android:background="@drawable/food2_5_fishhead"
        android:layout_marginTop="30dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_crucian"
        android:layout_gravity="center_horizontal"/>

    </android.support.constraint.ConstraintLayout>


</ScrollView>
