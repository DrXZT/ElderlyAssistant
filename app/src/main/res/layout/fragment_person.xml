<?xml version="1.0" encoding="utf-8"?>



<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/Parent"
    android:background="@color/fatewhite">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="270dp"
        app:layout_constraintTop_toTopOf="@+id/Parent"
        app:layout_constraintLeft_toLeftOf="@+id/Parent"
        android:background="@drawable/yuanjiao"
        android:id="@+id/parent">

        <TextView
            android:id="@+id/tv_my"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:text="我的"
            android:textColor="#000000"
            app:layout_constraintTop_toTopOf="@+id/parent"
            app:layout_constraintLeft_toLeftOf="@+id/parent"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="30dp"/>
        <Button
            android:id="@+id/btn_head"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_my"
            app:layout_constraintLeft_toLeftOf="@+id/parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="80dp"
            android:background="@drawable/head"/>
        <Button
            android:id="@+id/btn_head2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/parent"
            app:layout_constraintLeft_toRightOf="@+id/btn_head"
             android:layout_marginLeft="50dp"
            android:text="点击登录"
            android:textSize="30sp"
            android:background="@color/white"
            app:layout_constraintBaseline_toBaselineOf="@+id/btn_head"/>
        <view
            android:id="@+id/v_1"
            android:layout_width="330dp"
            android:layout_height="3dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_head"
            app:layout_constraintLeft_toLeftOf="@+id/parent"
            app:layout_constraintRight_toRightOf="@+id/parent"
            android:layout_marginTop="20dp"/>
        <view
            android:id="@+id/v_2"
            android:layout_width="2dp"
            android:layout_height="60dp"
            app:layout_constraintTop_toBottomOf="@+id/v_1"
            app:layout_constraintLeft_toLeftOf="@+id/parent"
            app:layout_constraintRight_toRightOf="@+id/parent"
            android:layout_marginTop="10dp"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/parent"
            app:layout_constraintRight_toLeftOf="@+id/v_2"
            app:layout_constraintTop_toBottomOf="@+id/v_1"
            app:layout_constraintBottom_toBottomOf="@+id/parent"
            android:includeFontPadding="false"
            android:background="#FFFFFF"
            android:text="浏览记录"
            android:textSize="25sp"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toRightOf="@+id/v_2"
            app:layout_constraintRight_toRightOf="@+id/parent"
            app:layout_constraintTop_toBottomOf="@+id/v_1"
            app:layout_constraintBottom_toBottomOf="@+id/parent"
            android:includeFontPadding="false"
            android:background="#FFFFFF"
            android:text="收藏"
            android:textSize="25sp"/>



    </android.support.constraint.ConstraintLayout>









</android.support.constraint.ConstraintLayout>