<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.asciimovie.drxzt.elderlyassistant.activity.news.News3Activity">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f5f5f5">
        <Button
            android:id="@+id/btn_back"
            android:layout_width="45dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="@+id/parent"
            app:layout_constraintLeft_toLeftOf="@+id/parent"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发展素质教育..."
            android:textSize="30sp"
            android:textColor="#000000"
            app:layout_constraintLeft_toLeftOf="@+id/parent"
            app:layout_constraintRight_toRightOf="@+id/parent"
            app:layout_constraintTop_toTopOf="@+id/parent"
            android:layout_marginTop="34dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7月22日 中国新闻网"
            android:textSize="20sp"
            android:textColor="#000000"
            app:layout_constraintLeft_toLeftOf="@+id/parent"
            app:layout_constraintRight_toRightOf="@+id/parent"
            app:layout_constraintTop_toTopOf="@+id/parent"
            android:layout_marginTop="80dp"/>
        <View
            android:id="@+id/view_star"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/iv_star"
            app:layout_constraintLeft_toLeftOf="@id/iv_star"
            app:layout_constraintRight_toRightOf="@id/iv_star"
            app:layout_constraintBottom_toBottomOf="@id/iv_star"/>


        <ImageView
            android:id="@+id/iv_star"
            app:layout_constraintRight_toRightOf="@+id/parent"
            app:layout_constraintTop_toTopOf="@+id/parent"
            android:layout_marginTop="40dp"
            android:layout_marginRight="30dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/star"/>
        <ImageView
            android:layout_width="350dp"
            android:layout_height="1200dp"
            android:src="@drawable/news3"
            app:layout_constraintLeft_toLeftOf="@+id/parent"
            app:layout_constraintRight_toRightOf="@+id/parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_back"
            android:scaleType="fitCenter"
            android:layout_marginTop="50dp"/>



    </android.support.constraint.ConstraintLayout>

</ScrollView>
