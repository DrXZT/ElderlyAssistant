<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.food.FoodSpinachActivity">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f5f5f5">
        <Button
            android:id="@+id/btn_back"
            android:layout_width="45dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="@+id/parent"
            app:layout_constraintLeft_toLeftOf="@+id/parent"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="菠菜"
            android:textSize="30sp"
            android:textColor="#000000"
            app:layout_constraintLeft_toLeftOf="@+id/parent"
            app:layout_constraintRight_toRightOf="@+id/parent"
            app:layout_constraintTop_toTopOf="@+id/parent"
            android:layout_marginTop="34dp"/>

        <View
            android:id="@+id/view_star"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/iv_star"
            app:layout_constraintLeft_toLeftOf="@id/iv_star"
            app:layout_constraintRight_toRightOf="@id/iv_star"
            app:layout_constraintBottom_toBottomOf="@id/iv_star"/>


        <ImageView
            android:id="@+id/iv_star"
            app:layout_constraintRight_toRightOf="@+id/parent"
            app:layout_constraintTop_toTopOf="@+id/parent"
            android:layout_marginTop="40dp"
            android:layout_marginRight="30dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/star"/>
        <ImageView
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:src="@drawable/spinach"
            app:layout_constraintLeft_toLeftOf="@+id/parent"
            app:layout_constraintRight_toRightOf="@+id/parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_back"
            android:scaleType="fitCenter"
            android:layout_marginTop="30dp"/>
        <ImageView
            android:layout_width="400dp"
            android:layout_height="1250dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_back"
            app:layout_constraintLeft_toLeftOf="@+id/parent"
            app:layout_constraintRight_toRightOf="@+id/parent"
            android:layout_marginTop="250dp"
            android:src="@drawable/spinachtext"/>


    </android.support.constraint.ConstraintLayout>

</ScrollView>