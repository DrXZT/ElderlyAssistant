<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Coummunity.VolunteerActivity">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/parent"
        android:background="#f5f5f5">
        <Button
            android:id="@+id/btn_back"
            android:layout_width="45dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="@+id/parent"
            app:layout_constraintLeft_toLeftOf="@+id/parent"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/back"/>
        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="社区讲开展爱心义卖活动"
            android:textSize="30sp"
            android:textColor="#000000"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintLeft_toLeftOf="@+id/parent"
            app:layout_constraintRight_toRightOf="@+id/parent"
            app:layout_constraintTop_toTopOf="@+id/parent"
            android:layout_marginTop="34dp"/>
        <Button
            app:layout_constraintRight_toRightOf="@+id/parent"
            app:layout_constraintTop_toTopOf="@+id/parent"
            android:layout_marginTop="40dp"
            android:layout_marginRight="30dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/star"/>


        <ImageView
            android:id="@+id/iv_sale"
            android:layout_width="350dp"
            android:layout_height="250dp"
            android:src="@drawable/sale"
            app:layout_constraintTop_toTopOf="@+id/parent"
            app:layout_constraintLeft_toLeftOf="@+id/parent"
            app:layout_constraintRight_toRightOf="@+id/parent"
            android:layout_marginTop="100dp" />

        <ImageView
            android:layout_width="500dp"
            android:layout_height="700dp"
            app:layout_constraintTop_toBottomOf="@id/iv_sale"
            app:layout_constraintLeft_toLeftOf="@+id/parent"
            app:layout_constraintRight_toRightOf="@+id/parent"
            android:layout_marginTop="0dp"
            android:src="@drawable/saletext"/>

    </android.support.constraint.ConstraintLayout>

</ScrollView>