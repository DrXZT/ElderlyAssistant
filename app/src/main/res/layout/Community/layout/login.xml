<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parent"
    android:background="#ffffff">
    <Button
        android:id="@+id/btn_back"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginTop="86dp"
        android:layout_marginLeft="37dp"
        android:background="@drawable/ic_clear_delet"
        app:layout_constraintLeft_toLeftOf="@+id/parent"
        app:layout_constraintTop_toTopOf="@+id/parent" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:includeFontPadding="false"
        android:gravity="center|top"
        android:textSize="40dp"
        android:textColor="#000000"
        android:text="手机号登录"
        app:layout_constraintTop_toTopOf="@+id/btn_back"
        app:layout_constraintLeft_toLeftOf="@+id/parent"
        app:layout_constraintRight_toRightOf="@+id/parent"
        app:layout_constraintBottom_toBottomOf="@+id/btn_back"/>

    <TextView
        android:id="@+id/tv_pn"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:text="手机号"
        android:textSize="25sp"
        android:includeFontPadding="false"
        app:layout_constraintLeft_toLeftOf="@+id/parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_back"
        android:layout_marginLeft="59dp"
        android:layout_marginTop="90dp"
        android:textColor="#000000"/>

    <EditText
        android:id="@+id/phone"
        android:layout_width="200dp"
        android:layout_height="58dp"
        android:layout_marginLeft="1dp"
        android:background="@color/white"
        android:hint="请输入手机号"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:textColor="#cdcdcd"
        android:textSize="23sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_pn"
        app:layout_constraintLeft_toRightOf="@+id/tv_pn"
        app:layout_constraintRight_toRightOf="@+id/parent" />
    <View
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:background="#000000"
        app:layout_constraintTop_toBottomOf="@+id/tv_pn"
        app:layout_constraintLeft_toLeftOf="@+id/parent"
        app:layout_constraintRight_toRightOf="@+id/parent"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/tv_code"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_marginLeft="59dp"
        android:layout_marginTop="20dp"
        android:includeFontPadding="false"
        android:text="密    码"
        android:textColor="#000000"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="@+id/parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_pn" />
    <View
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:background="#000000"
        app:layout_constraintTop_toBottomOf="@+id/tv_code"
        app:layout_constraintLeft_toLeftOf="@+id/parent"
        app:layout_constraintRight_toRightOf="@+id/parent"
        android:layout_marginTop="5dp"/>
    <EditText
        android:id="@+id/login_password"
        android:layout_width="200dp"
        android:layout_height="58dp"
        android:hint="请填写验证码"
        android:textSize="23sp"
        android:textColor="#cdcdcd"
        android:background="@color/white"
        android:maxLines="1"
        app:layout_constraintLeft_toRightOf="@+id/tv_code"
        android:layout_marginLeft="1dp"
        android:includeFontPadding="false"
        app:layout_constraintRight_toRightOf="@+id/parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_code"/>

    <Button
        android:id="@+id/btn_getCode"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:text="获取验证码"
        android:textSize="20sp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@+id/login_password"
        app:layout_constraintRight_toRightOf="@+id/parent"
        android:layout_marginRight="55dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/vtn_code"/>
    <Button
        android:id="@+id/btn_login"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        app:layout_constraintLeft_toLeftOf="@+id/parent"
        app:layout_constraintRight_toRightOf="@+id/parent"
        android:layout_marginTop="270dp"
        android:text="登录"
        android:textSize="25sp"
        android:textColor="#000000"
        android:background="@drawable/btn_login"
        />



</android.support.constraint.ConstraintLayout>


