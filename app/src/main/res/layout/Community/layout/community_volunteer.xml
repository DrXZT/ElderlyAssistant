<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Coummunity.VolunteerActivity">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/parent"
        android:background="#ffffff">

        <View
            android:id="@+id/view_back"
            android:layout_width="45dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="@+id/parent"
            app:layout_constraintLeft_toLeftOf="@+id/parent"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/back"/>

        <TextView
            android:id="@id/tv_1"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="“志愿服务我先行、城市管理靠大家”诚邀您的参与"
            android:textSize="30sp"
            android:textColor="#000000"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintLeft_toLeftOf="@+id/parent"
            app:layout_constraintRight_toRightOf="@+id/parent"
            app:layout_constraintTop_toTopOf="@+id/parent"
            android:layout_marginTop="34dp"/>

        <View
            android:id="@+id/view_star"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/iv_star"
            app:layout_constraintLeft_toLeftOf="@id/iv_star"
            app:layout_constraintRight_toRightOf="@id/iv_star"
            app:layout_constraintBottom_toBottomOf="@id/iv_star"/>


        <ImageView
            android:id="@+id/iv_star"
            app:layout_constraintRight_toRightOf="@+id/parent"
            app:layout_constraintTop_toTopOf="@+id/parent"
            android:layout_marginTop="40dp"
            android:layout_marginRight="30dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/star"/>

        <ImageView
            android:id="@+id/iv_volunteer"
            android:layout_width="350dp"
            android:layout_height="250dp"
            android:src="@drawable/volunteer"
            app:layout_constraintTop_toTopOf="@+id/parent"
            app:layout_constraintLeft_toLeftOf="@+id/parent"
            app:layout_constraintRight_toRightOf="@+id/parent"
            android:layout_marginTop="100dp" />

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="活动内容"
            android:textSize="30sp"
            android:textColor="#000000"
            app:layout_constraintTop_toBottomOf="@+id/iv_volunteer"
            app:layout_constraintLeft_toLeftOf="@+id/parent"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"/>

        <View
            android:id="@+id/view_1"
            android:layout_width="0dp"
            android:layout_height="3dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_1"
            app:layout_constraintLeft_toLeftOf="@+id/parent"
            app:layout_constraintRight_toRightOf="@+id/parent" />

        <View
            android:layout_width="350dp"
            android:layout_height="600dp"
            android:background="@drawable/volunteertext"
            app:layout_constraintTop_toBottomOf="@id/tv_1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

    </android.support.constraint.ConstraintLayout>

</ScrollView>