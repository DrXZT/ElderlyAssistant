<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SportsActivity"
    android:id="@+id/parent"
    android:background="#ffffff">
    <Button
        android:id="@+id/btn_back"
        android:layout_width="45dp"
        android:layout_height="35dp"
        app:layout_constraintTop_toTopOf="@+id/parent"
        app:layout_constraintLeft_toLeftOf="@+id/parent"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/back"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="健康运动"
        android:textSize="35sp"
        android:textColor="#000000"
        app:layout_constraintLeft_toLeftOf="@+id/parent"
        app:layout_constraintRight_toRightOf="@+id/parent"
        app:layout_constraintTop_toTopOf="@+id/parent"
        android:layout_marginTop="34dp"/>

    <Button
        android:id="@+id/btn_walk"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/walk"
        app:layout_constraintTop_toBottomOf="@id/btn_back"
        app:layout_constraintLeft_toLeftOf="@+id/parent"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="40dp"/>
    <Button
        android:id="@+id/btn_exercise"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/exercise"
        app:layout_constraintTop_toBottomOf="@id/btn_walk"
        app:layout_constraintLeft_toLeftOf="@+id/parent"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="40dp"/>
    <Button
        android:id="@+id/btn_taijiquan"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/taijiquan"
        app:layout_constraintTop_toBottomOf="@id/btn_exercise"
        app:layout_constraintLeft_toLeftOf="@+id/parent"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="40dp"/>
    <Button
        android:id="@+id/btn_run"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/run"
        app:layout_constraintTop_toTopOf="@id/btn_walk"
        app:layout_constraintRight_toRightOf="@+id/parent"
        android:layout_marginRight="35dp" />
    <Button
        android:id="@+id/btn_squaredance"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/squaredance"
        app:layout_constraintTop_toTopOf="@id/btn_exercise"
        app:layout_constraintRight_toRightOf="@+id/parent"
        android:layout_marginRight="35dp" />

</android.support.constraint.ConstraintLayout>