<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    tools:context="com.asciimovie.drxzt.elderlyassistant.activity.news.News1Activity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f5f5f5">
        <Button
            android:id="@+id/btn_back"
            android:layout_width="45dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="@+id/parent"
            app:layout_constraintLeft_toLeftOf="@+id/parent"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/back"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="7月1日"
            android:gravity="left"
            android:textSize="30sp"
            android:layout_marginLeft="100dp"
            android:textColor="#000000"
            app:layout_constraintLeft_toLeftOf="@+id/parent"
            app:layout_constraintRight_toRightOf="@+id/parent"
            app:layout_constraintTop_toTopOf="@+id/parent"
            android:layout_marginTop="34dp"/>

        <View
            android:id="@+id/view_star"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/iv_star"
            app:layout_constraintLeft_toLeftOf="@id/iv_star"
            app:layout_constraintRight_toRightOf="@id/iv_star"
            app:layout_constraintBottom_toBottomOf="@id/iv_star"/>


        <ImageView
            android:id="@+id/iv_star"
            app:layout_constraintRight_toRightOf="@+id/parent"
            app:layout_constraintTop_toTopOf="@+id/parent"
            android:layout_marginTop="40dp"
            android:layout_marginRight="30dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_more_vert_black"/>

        <LinearLayout
            android:id="@+id/menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#f5f5ff"
            app:layout_constraintTop_toBottomOf="@id/iv_star"
            app:layout_constraintRight_toRightOf="@id/iv_star"
            android:padding="1dp"
            android:orientation="vertical"
            >

        <TextView
            android:id="@+id/tv_delet"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="删除记录"
            android:textColor="#000000"
            android:background="@color/white"
            android:gravity="center"
            android:shadowColor="#a6000000"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/tv_add"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@color/white"
            android:text="设定闹钟"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginTop="1dp"
            android:shadowColor="#a6000000"
            android:textSize="18dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/show1"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:padding="20dp"
            android:background="@drawable/back_radious_white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            >

            <ImageView
                android:id="@+id/iv_date"
                android:padding="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/iv_date"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/show2"
            android:layout_width="0dp"
            android:layout_height="260dp"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="30dp"
            android:padding="20dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/back_radious_white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            >

            <ImageView
                android:id="@+id/iv_time"
                android:padding="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/iv_time"
                />
        </LinearLayout>



    </android.support.constraint.ConstraintLayout>

</ScrollView>
