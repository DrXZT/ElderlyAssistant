<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/Parent"
    android:background="@color/fatewhite">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="310dp"
        app:layout_constraintTop_toTopOf="@+id/Parent"
        app:layout_constraintLeft_toLeftOf="@+id/Parent"
        android:background="@drawable/circle"
        android:id="@+id/parent">

        <TextView
            android:id="@+id/tv_my"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:text="我的"
            android:textColor="#000000"
            app:layout_constraintTop_toTopOf="@+id/parent"
            app:layout_constraintLeft_toLeftOf="@+id/parent"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="30dp"/>
        <TextView
            android:id="@+id/btn_head"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_my"
            app:layout_constraintLeft_toLeftOf="@+id/parent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="80dp"
            android:background="@drawable/head"/>

        <Button
            android:id="@+id/btn_head2"
            android:layout_width="150dp"
            android:layout_height="45dp"
            app:layout_constraintTop_toTopOf="@+id/parent"
            app:layout_constraintLeft_toRightOf="@+id/btn_head"
            android:drawableRight="@drawable/edit"
            android:layout_marginLeft="50dp"
            android:text="详细资料"
            android:padding="5dp"
            android:textSize="25sp"
            android:background="@drawable/vtn_code"
            app:layout_constraintBaseline_toBaselineOf="@+id/btn_head"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="夏天"
            android:textSize="25sp"
            android:textColor="#000000"
            app:layout_constraintTop_toBottomOf="@+id/btn_head"
            app:layout_constraintLeft_toLeftOf="@+id/parent"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="80dp"
            android:drawableRight="@drawable/woman"/>


        <view
            android:id="@+id/v_1"
            android:layout_width="330dp"
            android:layout_height="3dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_head"
            app:layout_constraintLeft_toLeftOf="@+id/parent"
            app:layout_constraintRight_toRightOf="@+id/parent"
            android:layout_marginTop="60dp"/>

        <view
            android:id="@+id/v_2"
            android:layout_width="2dp"
            android:layout_height="60dp"
            app:layout_constraintTop_toBottomOf="@+id/v_1"
            app:layout_constraintLeft_toLeftOf="@+id/parent"
            app:layout_constraintRight_toRightOf="@+id/parent"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="浏览记录"
            android:textColor="#000000"
            android:textSize="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="@id/v_2"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/v_1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收藏"
            android:textColor="#000000"
            android:textSize="30dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/v_2"

            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/v_1"/>


    </android.support.constraint.ConstraintLayout>


    <TextView
        android:id="@+id/tv_mycon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的关注"
        android:textSize="25sp"
        android:textColor="#000000"
        app:layout_constraintLeft_toLeftOf="@+id/Parent"
        app:layout_constraintTop_toBottomOf="@+id/parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"/>

    <Button
        android:id="@+id/btn_life"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="生 活"
        android:textSize="20sp"
        android:background="@drawable/btn_1"
        app:layout_constraintTop_toBottomOf="@+id/tv_mycon"
        app:layout_constraintLeft_toLeftOf="@+id/parent"
        android:layout_marginLeft="50dp" />

    <Button
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="国 际"
        android:textSize="20sp"
        android:background="@drawable/btn_2"
        app:layout_constraintTop_toBottomOf="@+id/tv_mycon"
        app:layout_constraintLeft_toRightOf="@+id/btn_life"
        android:layout_marginLeft="60dp"/>
    <Button
        android:id="@+id/btn_edu"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="教 育"
        android:textSize="20sp"
        android:background="@drawable/btn_3"
        app:layout_constraintTop_toBottomOf="@+id/btn_life"
        app:layout_constraintLeft_toLeftOf="@+id/parent"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="15dp"/>

    <Button
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_4"
        app:layout_constraintTop_toBottomOf="@+id/btn_life"
        app:layout_constraintLeft_toRightOf="@+id/btn_edu"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_edu"
        android:layout_marginLeft="60dp"
        android:drawableRight="@drawable/plus"
        android:paddingRight="55dp"/>





</android.support.constraint.ConstraintLayout>