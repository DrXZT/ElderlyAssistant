<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/par"
        android:background="#f5f5f5">
        <TextView
            android:id="@+id/tv_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="主页"
            android:textColor="#000000"
            android:textSize="40sp"
            app:layout_constraintLeft_toLeftOf="@+id/par"
            app:layout_constraintTop_toTopOf="@+id/par"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"/>

        <ImageView
            android:id="@+id/iv_weather"
            android:layout_width="355dp"
            android:layout_height="110dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/frag_main"
            app:layout_constraintLeft_toLeftOf="@+id/par"
            app:layout_constraintRight_toRightOf="@+id/par"
            app:layout_constraintTop_toBottomOf="@+id/tv_main"></ImageView>

        <TextView
            android:id="@+id/tv_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019年8月14日"
            android:textSize="25sp"
            android:textColor="#000000"
            app:layout_constraintTop_toBottomOf="@+id/tv_main"
            app:layout_constraintLeft_toLeftOf="@+id/par"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="60dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="星期二"
            android:textSize="25sp"
            android:textColor="#000000"
            app:layout_constraintTop_toBottomOf="@+id/tv_main"
            app:layout_constraintRight_toRightOf="@+id/par"
            android:layout_marginTop="30dp"
            android:layout_marginRight="60dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="16：40"
            android:textSize="40sp"
            android:textColor="#000000"
            app:layout_constraintTop_toBottomOf="@+id/tv_year"
            app:layout_constraintLeft_toLeftOf="@+id/par"
            android:layout_marginLeft="60dp"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/darkday"
            app:layout_constraintTop_toBottomOf="@+id/tv_year"
            app:layout_constraintRight_toLeftOf="@+id/tv_day"
            android:layout_marginTop="1dp"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/tv_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="阴天"
            android:textSize="25sp"
            android:textColor="#000000"
            app:layout_constraintTop_toBottomOf="@+id/tv_year"
            app:layout_constraintRight_toRightOf="@+id/par"
            android:layout_marginTop="8dp"
            android:layout_marginRight="60dp"/>

        <TextView
            android:id="@+id/tv_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备忘录"
            android:textSize="25sp"
            android:textColor="#000000"
            app:layout_constraintLeft_toLeftOf="@+id/par"
            app:layout_constraintTop_toBottomOf="@+id/tv_main"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="150dp"/>
        <!--<Button-->
            <!--android:id="@+id/btn_add"-->
            <!--android:layout_width="150dp"-->
            <!--android:layout_height="200dp"-->
            <!--app:layout_constraintTop_toBottomOf="@+id/tv_note"-->
            <!--app:layout_constraintLeft_toLeftOf="@+id/parent"-->
            <!--android:layout_marginTop="20dp"-->
            <!--android:layout_marginLeft="20dp"/>-->



        <View
            android:id="@+id/view_timeselect"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintHorizontal_weight="1"
            android:background="@drawable/back_radios"
            android:layout_margin="15dp"
            app:layout_constraintLeft_toLeftOf="@+id/tv_main"
            app:layout_constraintTop_toBottomOf="@id/tv_note"
            app:layout_constraintBottom_toTopOf="@id/tv_health"
            app:layout_constraintRight_toLeftOf="@id/view_loadmore"/>

        <View
            android:id="@+id/view_delet"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/view_add"
            app:layout_constraintTop_toTopOf="@id/view_timeselect"
            app:layout_constraintLeft_toLeftOf="@id/view_timeselect"
            app:layout_constraintRight_toRightOf="@+id/view_timeselect"/>

        <View
            android:id="@+id/view_add"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/view_delet"
            app:layout_constraintLeft_toLeftOf="@id/view_timeselect"
            app:layout_constraintRight_toRightOf="@id/view_timeselect"
            app:layout_constraintBottom_toBottomOf="@id/view_timeselect"/>

        <TextView
            android:id="@+id/tv_timedelet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除记录"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="@id/view_timeselect"
            app:layout_constraintBottom_toTopOf="@id/line3"
            app:layout_constraintLeft_toLeftOf="@id/view_timeselect"
            app:layout_constraintRight_toRightOf="@id/view_timeselect"
            />

        <View
            android:id="@+id/line3"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            app:layout_constraintLeft_toLeftOf="@id/view_timeselect"
            app:layout_constraintRight_toRightOf="@id/view_timeselect"
            app:layout_constraintTop_toBottomOf="@id/tv_timedelet"
            app:layout_constraintBottom_toTopOf="@id/tv_timeadd"
            />


        <TextView
            android:id="@+id/tv_timeadd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设定闹钟"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@id/view_timeselect"
            app:layout_constraintHorizontal_bias="0.416"
            app:layout_constraintLeft_toLeftOf="@id/view_timeselect"
            app:layout_constraintRight_toRightOf="@id/view_timeselect"
            app:layout_constraintTop_toBottomOf="@id/line3" />

        <View
            android:id="@+id/view_loadmore"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="15dp"
            android:background="@drawable/back_radious_fcc199"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@id/view_timeselect"
            app:layout_constraintTop_toBottomOf="@id/tv_note"
            app:layout_constraintBottom_toTopOf="@id/tv_health"
            app:layout_constraintRight_toRightOf="@id/iv_weather"/>

        <View
            android:id="@+id/line4"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:layout_marginLeft="63dp"
            android:layout_marginRight="63dp"
            android:background="@drawable/back_radios_black"
            app:layout_constraintLeft_toLeftOf="@id/view_loadmore"
            app:layout_constraintRight_toRightOf="@id/view_loadmore"
            app:layout_constraintTop_toTopOf="@id/view_loadmore"
            app:layout_constraintBottom_toBottomOf="@id/view_loadmore"
            />

        <View
            android:id="@+id/line5"
            android:layout_width="3dp"
            android:layout_height="0dp"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="100dp"
            android:background="@drawable/back_radios_black"
            app:layout_constraintTop_toTopOf="@id/view_loadmore"
            app:layout_constraintBottom_toBottomOf="@id/view_loadmore"
            app:layout_constraintLeft_toLeftOf="@id/view_loadmore"
            app:layout_constraintRight_toRightOf="@id/view_loadmore"/>


        <TextView
            android:id="@+id/tv_health"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="健康"
            android:textSize="25sp"
            android:textColor="#000000"
            app:layout_constraintLeft_toLeftOf="@+id/par"
            app:layout_constraintTop_toBottomOf="@+id/tv_note"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="250dp"/>
        <Button
            android:id="@+id/btn_food"
            android:layout_width="350dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_health"
            app:layout_constraintLeft_toLeftOf="@+id/par"
            app:layout_constraintRight_toRightOf="@+id/par"
            android:layout_marginTop="15dp"
            android:background="@drawable/heal1"
            android:text="健康饮食"
            android:textColor="#000000"
            android:textSize="30sp"
            android:gravity="end"
            android:paddingTop="40dp"
            android:layout_marginRight="10dp"

            />
        <Button
            android:id="@+id/btn_sport"
            android:layout_width="350dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_food"
            app:layout_constraintLeft_toLeftOf="@+id/par"
            app:layout_constraintRight_toRightOf="@+id/par"
            android:layout_marginTop="15dp"
            android:background="@drawable/heal2"
            android:text="健康运动"
            android:textColor="#000000"
            android:textSize="30sp"
            android:gravity="bottom"
            android:paddingLeft="10dp"
            android:paddingBottom="7dp"/>
        <Button
            android:id="@+id/btn_sleep"
            android:layout_width="350dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_sport"
            app:layout_constraintLeft_toLeftOf="@+id/par"
            app:layout_constraintRight_toRightOf="@+id/par"
            android:layout_marginTop="15dp"
            android:background="@drawable/heal3"
            android:text="睡眠助手"
            android:textColor="#000000"
            android:textSize="30sp"
            android:gravity="end"
            android:paddingTop="40dp"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:id="@+id/tv_fun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="娱乐"
            android:textSize="25sp"
            android:textColor="#000000"
            app:layout_constraintLeft_toLeftOf="@+id/par"
            app:layout_constraintTop_toBottomOf="@+id/btn_sleep"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"/>
        <Button
            android:id="@+id/btn_community"
            android:layout_width="350dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_fun"
            app:layout_constraintLeft_toLeftOf="@+id/par"
            app:layout_constraintRight_toRightOf="@+id/par"
            android:background="@drawable/fun1"
            android:layout_marginTop="15dp"
            android:text="社区活动"
            android:textColor="#000000"
            android:textSize="30sp"
            android:gravity="bottom"
            android:paddingLeft="10dp"
            android:paddingBottom="7dp"
            />
        <Button
            android:id="@+id/btn_news"
            android:layout_width="350dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_community"
            app:layout_constraintLeft_toLeftOf="@+id/par"
            app:layout_constraintRight_toRightOf="@+id/par"
            android:layout_marginTop="15dp"
            android:background="@drawable/fun2"
            android:text="时事新闻"
            android:textColor="#000000"
            android:textSize="30sp"
            android:gravity="end"
            android:paddingTop="40dp"
            android:layout_marginRight="10dp"/>
        <Button
            android:id="@+id/btn_radio"
            android:layout_width="350dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_news"
            app:layout_constraintLeft_toLeftOf="@+id/par"
            app:layout_constraintRight_toRightOf="@+id/par"
            android:layout_marginTop="15dp"
            android:background="@drawable/fun3"
            android:text="收音机"
            android:textColor="#000000"
            android:textSize="30sp"
            android:gravity="left"
            android:paddingLeft="40dp"
            android:paddingTop="20dp"
            />
        <Button
            android:id="@+id/btn_story"
            android:layout_width="350dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toBottomOf="@id/btn_radio"
            app:layout_constraintLeft_toLeftOf="@+id/par"
            app:layout_constraintRight_toRightOf="@+id/par"
            android:layout_marginTop="15dp"
            android:background="@drawable/fun4"
            android:text="听故事"
            android:textColor="#000000"
            android:textSize="30sp" />

    </android.support.constraint.ConstraintLayout>


</ScrollView>