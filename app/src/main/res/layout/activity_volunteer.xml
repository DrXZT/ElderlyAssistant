<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.user.VolunteerActivity">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/parent"
        android:background="#f5f5f5">
        <Button
            android:id="@+id/btn_back"
            android:layout_width="45dp"
            android:layout_height="35dp"
            app:layout_constraintTop_toTopOf="@+id/parent"
            app:layout_constraintLeft_toLeftOf="@+id/parent"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/back"/>
        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="“志愿服务我先行、城市管理靠大家”诚邀您的参与"
            android:textSize="35sp"
            android:textColor="#000000"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintLeft_toLeftOf="@+id/parent"
            app:layout_constraintRight_toRightOf="@+id/parent"
            app:layout_constraintTop_toTopOf="@+id/parent"
            android:layout_marginTop="34dp"/>

        <ImageView
            android:id="@+id/heart2"
            android:layout_width="350dp"
            android:layout_height="250dp"
            android:src="@drawable/heart2"
            app:layout_constraintTop_toTopOf="@+id/parent"
            app:layout_constraintLeft_toLeftOf="@+id/parent"
            app:layout_constraintRight_toRightOf="@+id/parent"
            android:layout_marginTop="100dp" />

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="活动内容"
            android:textSize="30sp"
            android:textColor="#000000"
            app:layout_constraintTop_toBottomOf="@+id/heart2"
            app:layout_constraintLeft_toLeftOf="@+id/parent"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"/>

        <view
            android:layout_width="360dp"
            android:layout_height="3dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_1"
            app:layout_constraintLeft_toLeftOf="@+id/parent"
            app:layout_constraintRight_toRightOf="@+id/parent" />
        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_1"
            app:layout_constraintLeft_toLeftOf="@+id/parent"
            app:layout_constraintRight_toRightOf="@+id/parent"
            android:layout_marginTop="10dp"
            android:text="  如果您闲在家中，拥有力气却无处可使，想要帮助他人。尽管过来吧，社区志愿者活动需要你！"
            android:textSize="25sp"/>
        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_1"
            app:layout_constraintLeft_toLeftOf="@+id/parent"
            app:layout_constraintRight_toRightOf="@+id/parent"
            android:layout_marginTop="130dp"
            android:text="  要求："
            android:textSize="25sp"/>
        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_1"
            app:layout_constraintLeft_toLeftOf="@+id/parent"
            app:layout_constraintRight_toRightOf="@+id/parent"
            android:layout_marginTop="160dp"
            android:text="1、能够参加社区志愿者的各项培训及相关活动；"
            android:textSize="25sp"/>
        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_1"
            app:layout_constraintLeft_toLeftOf="@+id/parent"
            app:layout_constraintRight_toRightOf="@+id/parent"
            android:layout_marginTop="160dp"
            android:text="2、能够坚持参加社区志愿服务工作"
            android:textSize="25sp"/>
        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_1"
            app:layout_constraintLeft_toLeftOf="@+id/parent"
            app:layout_constraintRight_toRightOf="@+id/parent"
            android:layout_marginTop="160dp"
            android:text="1、能够参加社区志愿者的各项培训及相关活动；"
            android:textSize="25sp"/>


    </android.support.constraint.ConstraintLayout>

</ScrollView>